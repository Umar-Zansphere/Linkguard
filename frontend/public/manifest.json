{
  "manifest_version": 3,
  "name": "LinkGuard",
  "version": "1.0",
  "description": "Scans HTTP, FTP, SSH links and curl commands for potential threats.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "LinkGuard Scan",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}